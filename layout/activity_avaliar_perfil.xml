<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:padding="16dp"
    android:background="@drawable/homebackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Título da Página -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avalie o Perfil"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="24dp"
            android:gravity="center" />

        <!-- Imagem de Perfil -->
        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:contentDescription="Imagem de Perfil" />

        <!-- Nome -->
        <TextView
            android:id="@+id/nomeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Email -->
        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <!-- Contato -->
        <TextView
            android:id="@+id/contatoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contato"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <!-- Número de Identificação -->
        <TextView
            android:id="@+id/numeroIdentificacaoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Número de Identificação"
            android:layout_marginBottom="8dp" />

        <!-- Número de Ordem -->
        <TextView
            android:id="@+id/numeroOrdemTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Número de Ordem"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp" />

        <!-- Imagem BI -->
        <ImageView
            android:id="@+id/biImageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Imagem de BI" />

        <!-- Imagem de Inscrição -->
        <ImageView
            android:id="@+id/inscricaoImageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Imagem de Inscrição" />

        <!-- Botões -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/approveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aprovar"
                android:backgroundTint="@color/turquesa3"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/rejectButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/turquesa3"
                android:textColor="@color/white"
                android:text="Reprovar" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
